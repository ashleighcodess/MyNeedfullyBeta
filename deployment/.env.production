# MyNeedfully Production Environment Variables
# Copy this file to .env and update with your actual values

NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://myneedfully:YOUR_DB_PASSWORD@localhost:5432/myneedfully

# Session Configuration
SESSION_SECRET=YOUR_LONG_RANDOM_SESSION_SECRET_HERE_MINIMUM_64_CHARACTERS

# Email Service (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE

# Product Search APIs
SERPAPI_API_KEY=YOUR_SERPAPI_KEY_HERE
RAINFOREST_API_KEY=YOUR_RAINFOREST_API_KEY_HERE

# Replit Authentication
REPL_ID=YOUR_REPLIT_APP_ID
REPLIT_DOMAINS=yourdomain.com,www.yourdomain.com
ISSUER_URL=https://replit.com/oidc

# Optional: Analytics and Monitoring
# GOOGLE_ANALYTICS_ID=YOUR_GA_ID
# SENTRY_DSN=YOUR_SENTRY_DSN